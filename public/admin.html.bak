<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Panel de Administración</title>
  <style>
    body {
      background: #111;
      color: #fff;
      font-family: Arial, sans-serif;
      padding: 40px;
    }
    input, button {
      padding: 10px;
      width: 100%;
      max-width: 400px;
      margin-bottom: 15px;
      font-size: 1rem;
    }
    button {
      background: #1976d2;
      color: white;
      border: none;
      cursor: pointer;
      font-weight: bold;
    }
    button:hover {
      background: #2196f3;
    }
  </style>
</head>
<body>
  <h2>Panel de Administración</h2>
  <form id="formTracks">
    <label for="track1">ID del Track 1:</label><br />
    <input type="text" id="track1" name="track1" required /><br />
    <label for="track2">ID del Track 2:</label><br />
    <input type="text" id="track2" name="track2" required /><br />
    <button type="submit">Actualizar Tracks</button>
  </form>
  <p id="respuesta"></p>

  <script>
    document.getElementById('formTracks').addEventListener('submit', async (e) => {
      e.preventDefault();
      const track1 = document.getElementById('track1').value;
      const track2 = document.getElementById('track2').value;

      const res = await fetch('/api/admin/actualizar-tracks', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ track1, track2 })
      });

      const text = await res.text();
      document.getElementById('respuesta').textContent = text;
    });
  </script>
</body>
</html>
