body {
  background: url("background.jpg") no-repeat center center fixed;
  background-size: cover;
  font-family: Arial, sans-serif;
  color: white;
  margin: 0;
  padding: 0;
}

.container {
  padding: 20px;
  max-width: 1200px;
  margin: auto;
}

.card {
  background-color: rgba(0, 0, 0, 0.65);
  padding: 20px;
  margin: 20px 0;
  border-radius: 10px;
}

.card h3 {
  margin-top: 5px;
  margin-bottom: 10px;
}

table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 10px;
}

th, td {
  padding: 8px;
  text-align: center;
  border-bottom: 1px solid #888;
}

.mejorado {
  color: lightgreen;
}

.empeorado {
  color: orange;
}

.nombre-pestana {
  font-weight: bold;
  color: red;
}

button {
  padding: 6px 12px;
  margin: 5px;
  font-weight: bold;
  cursor: pointer;
}

.popup {
  position: fixed;
  top: 10%;
  left: 50%;
  transform: translate(-50%, 0);
  background-color: #111;
  padding: 20px;
  border: 2px solid white;
  border-radius: 8px;
  width: 90%;
  max-width: 500px;
  z-index: 999;
  color: white;
  display: none;
}

.popup button {
  float: right;
  background-color: #ff4444;
  color: white;
  border: none;
  padding: 5px 10px;
  font-weight: bold;
  cursor: pointer;
}
